<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res_auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/skovorodk2"
            />

        <ru.cityvoicer.golosun.design.AspectFrameLayout
            android:id="@+id/mBarCodeImageFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            res_auto:aspect="3.27"
            res_auto:mode="variableHeight"
            >
            <ImageView
                android:id="@+id/mImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ProgressBar
                android:id="@+id/mProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </ru.cityvoicer.golosun.design.AspectFrameLayout>

        <ru.cityvoicer.golosun.design.CustomTextView
            android:id="@+id/mBarCodeNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="0000000000"
            res_auto:fontAssetName="Roboto-Light.ttf"
            android:textSize="24sp"
            android:textColor="#000000"
            />
    </LinearLayout>
</FrameLayout>