<?xml version="1.0" encoding="utf-8"?>
<ru.cityvoicer.golosun.MainTopBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res_auto="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ru.cityvoicer.golosun.design.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name_title"
            res_auto:fontAssetName="Roboto-Bold.ttf"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/side_menu_show_button"
        android:layout_width="@dimen/top_bar_height"
        android:layout_height="@dimen/top_bar_height"
        android:scaleType="center"
        android:src="@drawable/ico_menu"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        >
        <ru.cityvoicer.golosun.design.CustomTextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="500"
            res_auto:fontAssetName="Roboto-Bold.ttf"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mesh"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>

</ru.cityvoicer.golosun.MainTopBar>