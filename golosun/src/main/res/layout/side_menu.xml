<?xml version="1.0" encoding="utf-8"?>
<ru.cityvoicer.golosun.SideMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res_auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/side_menu_width"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="@dimen/side_menu_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <FrameLayout
            android:id="@+id/user_id_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:background="@color/dark_blue"
            >
            <ru.cityvoicer.golosun.design.CustomTextView
                android:id="@+id/user_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="данные подключения ID"
                res_auto:fontAssetName="Roboto-Bold.ttf"
                android:textSize="14sp"
                android:textColor="#ffffff"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/card_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ticket"
                    />
            </FrameLayout>

            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Скидочная карта"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />

        <LinearLayout
            android:id="@+id/image_list_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tickets"
                    />
            </FrameLayout>

            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Купоны"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/give_money_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_money"
                    />
            </FrameLayout>

            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Вывод баллов"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_map"
                    />
            </FrameLayout>

            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Карта организаций"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_sale"
                    />
            </FrameLayout>
            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Ваша дисконтная карта"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_settings"
                    />
            </FrameLayout>
            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Настройки"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="7dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ru.cityvoicer.golosun.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="звук"
                    res_auto:fontAssetName="Roboto-Light.ttf"
                    android:textSize="14sp"
                    android:textColor="@color/dark_blue"
                    />
                <CheckBox
                    android:id="@+id/sound_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/video_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />
                <ru.cityvoicer.golosun.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="видео"
                    res_auto:fontAssetName="Roboto-Light.ttf"
                    android:textSize="14sp"
                    android:textColor="@color/dark_blue"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/social_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />
                <ru.cityvoicer.golosun.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="соц. опросы"
                    res_auto:fontAssetName="Roboto-Light.ttf"
                    android:textSize="14sp"
                    android:textColor="@color/dark_blue"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />

        <LinearLayout
            android:id="@+id/tutorial_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_info"
                    />
            </FrameLayout>
            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Как пользоваться"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3dbe3"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/connection_tutorial_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_item_height"
            android:orientation="horizontal"
            android:background="@drawable/side_menu_item_background"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_info"
                    />
            </FrameLayout>
            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Как подключится"
                res_auto:fontAssetName="Roboto-Light.ttf"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                />
        </LinearLayout>

    </LinearLayout>
</ru.cityvoicer.golosun.SideMenu>
