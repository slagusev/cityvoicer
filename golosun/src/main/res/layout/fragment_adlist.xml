<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res_auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/hidden_image"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/mainFrame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#888888"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <ImageView
                android:id="@+id/title_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                />
            <ru.cityvoicer.golosun.design.CustomTextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Name"
                res_auto:fontAssetName="Roboto-Bold.ttf"
                android:textSize="14sp"
                android:textColor="#404040"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            >
            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                />
            <VideoView
                android:id="@+id/video_view"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="invisible"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_text_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <ru.cityvoicer.golosun.design.CustomTextView
                android:id="@+id/main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:text="description description description description description description description description"
                res_auto:fontAssetName="Roboto-Bold.ttf"
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/buttons_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vote_buttons_height"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/bad_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@drawable/gray_button_background"
                >
                <ImageView
                    android:id="@+id/bad_button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/smile_sad"
                    />
                <ImageView
                    android:id="@+id/a_button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/vote_a"
                    android:visibility="invisible"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#8a8989"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/good_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@drawable/gray_button_background"
                >
                <ImageView
                    android:id="@+id/good_button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/smile_cheerful"
                    />
                <ImageView
                    android:id="@+id/b_button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/vote_b"
                    android:visibility="invisible"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#8a8989"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/reloadImageButton"
        android:src="@drawable/ic_reload"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <FrameLayout
        android:id="@+id/feedbackFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="63dp"
            android:background="#FFFFFF"
            >
            <ru.cityvoicer.golosun.design.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Ваш отзыв"
                res_auto:fontAssetName="Roboto-Bold.ttf"
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                android:background="@color/light_gray"
                />

            <EditText
                android:id="@+id/feedbackEditText"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_height="98dp"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:gravity="top|left"
                />

            <ru.cityvoicer.golosun.design.CustomTextView
                android:id="@+id/feedbackButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="OK"
                res_auto:fontAssetName="Roboto-Bold.ttf"
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_button_background"
                />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/noAdsFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="invisible"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_fon"
            android:scaleType="centerInside"
            android:visibility="invisible" />
    </FrameLayout>

    <RelativeLayout
        android:id = "@+id/CityCardFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" >

        </EditText>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityCard"
            android:layout_below="@+id/searchView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</FrameLayout>